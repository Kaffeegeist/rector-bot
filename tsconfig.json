{
    "compilerOptions": {
        "outDir": "./dist",
        "strict": true,
        "target": "ES5",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "paths": {
            "@": ["./src"],
            "@/*": ["./src/*"]
        },
        "baseUrl": "./"
    },
    "include": ["./src/**/*"]
}
